{
  "name": "indushelper",
  "repository": "https://github.com/mayig/indus-valley-script-corpus",
  "license": "MIT",
  "displayName": "Indus Symbol Feature Helper",
  "description": "Hover support to show features over P123 style identifiers",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:json",
    "onLanguage:markdown"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "indushelper.reload",
        "title": "Reload Features"
      },
      {
        "command": "indushelper.reset",
        "title": "Reset Features to 0,1,0"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}